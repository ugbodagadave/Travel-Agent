FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8080
ENV PORT=8080

CMD ["gunicorn", "--workers", "1", "--bind", "0.0.0.0:8080", "--timeout", "300", "--log-level", "debug", "--access-logfile", "-", "--error-logfile", "-", "app.main:app"]